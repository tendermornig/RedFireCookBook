<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:id="@+id/collectionRecipeImage"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collectionRecipeName"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:padding="4dp"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collectionTime"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:id="@+id/collectionRecipeMaterial"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:id="@+id/deleteCollectionBtn"
                android:text="@string/delete_collection"
                android:textSize="12sp"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/white"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>